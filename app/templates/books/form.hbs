<h2>{{title}}</h2>
<div class="row">
	<div class="col-md-6">
		<form>
			<div class="form-group">
				<label>Book Name</label>
				{{input class="form-control" value=model.title}}
			</div>

			<div class="form-group">
				<label>Release Year</label>
				{{input class="form-control" value=model.releaseYear}}
			</div>
			<button class="btn btn-md btn-success" {{action 'saveBook' model}}>{{buttonLabel}}</button>
		</form>	
	</div>
</div>